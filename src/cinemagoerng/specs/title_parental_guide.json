{
  "version": "20250528",
  "url": "https://www.imdb.com/title/%(imdb_id)s/parentalguide/",
  "doctype": "html",
  "path_type": "jmespath",
  "pre": [
    "parse_next_data"
  ],
  "rules": [
    {
      "key": "certification",
      "extractor": {
        "rules": [
          {
            "key": "mpa_rating",
            "extractor": {
              "path": "props.pageProps.contentData.entityMetadata.certificate.rating"
            }
          },
          {
            "key": "mpa_rating_reason",
            "extractor": {
              "path": "props.pageProps.contentData.contentRatingData.ratingReason"
            }
          },
          {
            "key": "certificates",
            "extractor": {
              "foreach": "props.pageProps.contentData.certificates[*]",
              "rules": [
                {
                  "key": "country",
                  "extractor": {
                    "path": "country"
                  }
                },
                {
                  "key": "ratings",
                  "extractor": {
                    "path": "ratings[*].rating"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    {
      "key": "advisories",
      "transforms": [
        "flatten_list_of_dicts"
      ],
      "extractor": {
        "foreach": "props.pageProps.contentData.categories[*]",
        "transforms": [
          "make_dict"
        ],
        "rules": [
          {
            "key": "key",
            "extractor": {
              "path": "id",
              "transforms": [
                "lower"
              ]
            }
          },
          {
            "key": "value",
            "extractor": {
              "rules": [
                {
                  "key": "details",
                  "extractor": {
                    "foreach": "items[*]",
                    "rules": [
                      {
                        "key": "text",
                        "extractor": {
                          "path": "text"
                        }
                      },
                      {
                        "key": "is_spoiler",
                        "extractor": {
                          "path": "isSpoiler"
                        }
                      }
                    ]
                  }
                },
                {
                  "key": "status",
                  "extractor": {
                    "path": "severitySummary.text"
                  }
                },
                {
                  "key": "votes",
                  "transforms": [
                    "flatten_list_of_dicts"
                  ],
                  "extractor": {
                    "foreach": "severityBreakdown[*]",
                    "transforms": [
                      "make_dict"
                    ],
                    "rules": [
                      {
                        "key": "key",
                        "extractor": {
                          "path": "text",
                          "transforms": [
                            "lower"
                          ]
                        }
                      },
                      {
                        "key": "value",
                        "extractor": {
                          "path": "votes"
                        }
                      }
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
